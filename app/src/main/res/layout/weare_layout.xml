<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/teal_700"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        android:layoutDirection="rtl"
        android:theme="?attr/actionBarTheme">
        <!-- Options Menu Button -->
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="من نحن"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:src="@drawable/iconback"
            android:contentDescription="Options Menu"
            android:onClick="showOptionsMenu" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/logo1"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/logo2"
            android:layout_toRightOf="@id/logo1"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:textSize="18dp"
        android:text="دور الفرقان للحفظ والتلاوة"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center_vertical|end"
            android:justificationMode="inter_word"
            android:text="دور الفرقان للحفظ والتلاوة هي دور تعنى بحفظ وتلاوة القرآن الكريم في منطقة عكار - لبنان. يبلغ عدد فروع الدور لغاية العام 2024 مـ - 1445 هـ  15 فرعًا في قرى وبلدات المنطقة."
            android:textColor="#000000"
            android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/branches_list"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_gravity="center_vertical|end"
                android:justificationMode="inter_word"
                android:text="تتبع دور الفرقان للحفظ والتلاوة لمعهد الفرقان للعلوم الشريعة، الذي يندرج ضمن إطار جمعية شباب العطاء الجزيل. تأسس هذا المعهد في لبنان في عام 1427 هـ - 2006 م، و هو مؤسسة ثانوية تختص في تقديم التعليم للعلوم الشرعية للطلاب والطالبات في المراحل الأعدادية والثانوية."
                android:textColor="#000000"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:textSize="18dp"
                android:text="25 حافظا و حافظة لعام 2023"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:textSize="16dp"
                android:layout_gravity="center_vertical|end"
                android:justificationMode="inter_word"
                android:text="أتم خلال العام الأخير (2023م - 1445 هـ) خمس و عشرون طالبًا و طالبة حفظ القرآن الكريم كاملًا بالسند المتصل إلى حضرة النبي صلى الله عليه و سلم."
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:textSize="18dp"
                android:text="1500 طالب و طالبة"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:textSize="16dp"
                android:layout_gravity="center_vertical|end"
                android:justificationMode="inter_word"
                android:text="بلغ عدد طلاب الدور لهذا العام (2023م - 1445 هـ) ألفا و خمسمئة طالب و طالبة متوزعين على 15 فرعًا في منطقة عكار - لبنان."
                android:textColor="#000000" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:textSize="18dp"
                android:text="إختبار سنوي تقييمي"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:textSize="16dp"
                android:layout_gravity="center_vertical|end"
                android:justificationMode="inter_word"
                android:text="يقام إختبار سنوي تقييمي لطلاب جميع الفروع في الشهر التاسع من كل عام، يحدد فيه مستوى الحفظ و القراءة لدى الطلاب."
                android:textColor="#000000" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
