<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/teal_700"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        android:layoutDirection="rtl"
        android:theme="?attr/actionBarTheme">
        <!-- Options Menu Button -->
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="تواصل معنا"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:src="@drawable/iconback"
            android:contentDescription="Options Menu"
            android:onClick="showOptionsMenu" />
    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:text="يمكنكم التواصل معنا عبر الأرقام التالية :"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:text="الشيخ محمد مرعب : 431 941  76 961+ "
        android:layoutDirection="rtl"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="الشيخ وليـــد جوهر : 885 208  70 961+ "
        android:layoutDirection="rtl"
        android:textColor="#000000"/>


    <!-- Login Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp">

        <Button
            android:id="@+id/send_email_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إرسال رسالة عبر البريد الالكتروني"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#009688"/>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/my_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_height="2dp"
        android:background="@color/color4"/>


    <TextView
        android:id="@+id/textViewس"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:text="كما يمكنكم متابعتنا عبر وسائل التواصل التالية :"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/logo_fb"/>
        <ImageView
            android:id="@+id/instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo_instagram"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/facebook"/>

    </RelativeLayout>
</LinearLayout>
