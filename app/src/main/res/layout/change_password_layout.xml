<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/teal_700"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        android:layoutDirection="rtl"
        android:theme="?attr/actionBarTheme">
        <ImageView
            android:id="@+id/optionsMenuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:src="@drawable/iconmenu"
            android:contentDescription="Options Menu"
            android:onClick="showOptionsMenu" />
        <!-- Options Menu Button -->
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:src="@drawable/iconback"
            android:contentDescription="Options Menu"
            android:onClick="showOptionsMenu" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/titlechange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:text="تغيير كلمة المرور" />
    <!-- Username EditText -->
    <EditText
        android:id="@+id/old_pass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="كلمة المرور القديمة"
        android:inputType="text"/>
    <!-- Username EditText -->
    <EditText
        android:id="@+id/newpass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="كلمة المرور الجديدة"
        android:inputType="text"/>
    <!-- Username EditText -->
    <EditText
        android:id="@+id/confirmnewpass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="تأكيد كلمة المرور الجديدة"
        android:inputType="text"/>
    <!-- Login Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp">

        <Button
            android:id="@+id/change_pass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تغيير كلمة المرور"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#009688"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#FF0000"
        android:textStyle="bold" />

</LinearLayout>
